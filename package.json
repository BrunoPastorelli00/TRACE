  "description": "An open, minimal, and verifiable provenance layer for AI-generated and AI-transformed content",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "trace-stamp": "./dist/cli/trace-stamp.js",
    "trace-verify": "./dist/cli/trace-verify.js"
  },
  "scripts": {
